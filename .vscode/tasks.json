{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to ESP32",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/deploy.sh",
            "problemMatcher": [],
            "options": {
                "env": {
                    "DEVICE": "auto"
                }
            }
        },
        {
            "label": "Open ESP32 REPL",
            "type": "shell",
            "command": "mpremote connect auto repl",
            "problemMatcher": []
        },
        {
            "label": "Reset ESP32",
            "type": "shell",
            "command": "mpremote connect auto reset",
            "problemMatcher": []
        }
        ,
        {
            "label": "Deploy to ESP32 (dry-run)",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/deploy.sh --dry-run",
            "problemMatcher": [],
            "options": {
                "env": {
                    "DEVICE": "auto"
                }
            }
        }
        ,
        {
            "label": "Deploy and Open REPL",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/deploy.sh && mpremote connect auto repl",
            "problemMatcher": [],
            "options": {
                "env": {
                    "DEVICE": "auto"
                }
            }
        }
        ,
        {
            "label": "Run main.py (local)",
            "type": "shell",
            "command": "python3 ${workspaceFolder}/src/main.py",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run main.py (local, 5s)",
            "type": "shell",
            "command": "timeout 5 python3 ${workspaceFolder}/src/main.py",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
